{
    "name": "resentek-react-type-script-start-kit",
    "description": "A simple react, typescript, jest test, parcel bundler-based start kit for any component or library development start kit",
    "version": "0.0.1",
    "author": "David Zhao",
    "email": "david.zhao@resentek.com",
    "license": "MIT",
    "main": "index.js",
    "scripts": {
        "start": "parcel index.html -p 8000 --open firefox",
        "lint": "tslint --project tsconfig.json --format codeFrame",
        "test": "jest",
        "build": "rm -rf dist && parcel build index.html --experimental-scope-hoisting --no-minify"
    },
    "jest": {
        "verbose": true,
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "transform": {
            "^.+\\.(ts|tsx)$": "ts-jest"
        },
        "globals": {
            "ts-jest": {
                "tsConfigFile": "tsconfig.json"
            }
        },
        "testMatch": [
            "**/__tests__/*.+(ts|tsx|js)"
        ]
    },
    "devDependencies": {
        "@types/jest": "^23.3.1",
        "@types/jquery": "v1",
        "@types/react": "^16.4.11",
        "@types/react-dom": "^16.0.7",
        "@types/reactstrap": "^6.0.3",
        "babel-core": "^6.26.3",
        "babel-jest": "^23.4.2",
        "babel-preset-env": "^1.7.0",
        "cssnano": "^4.0.5",
        "enzyme": "^3.4.4",
        "enzyme-adapter-react-16": "^1.2.0",
        "jest": "^23.5.0",
        "jshint": "^2.9.6",
        "node-sass": "^4.9.3",
        "react-test-renderer": "^16.4.2",
        "ts-jest": "^23.1.3",
        "tslint": "^5.11.0",
        "tslint-react": "^3.6.0",
        "typescript": "^3.0.1"
    },
    "dependencies": {
        "@fortawesome/fontawesome-free": "^5.3.1",
        "babel-preset-react": "^6.24.1",
        "bootstrap": "^4.1.3",
        "react": "^16.4.2",
        "react-dom": "^16.4.2",
        "reactstrap": "^6.4.0"
    }
}
